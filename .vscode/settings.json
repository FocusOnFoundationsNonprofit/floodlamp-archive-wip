{
    "terminal.integrated.cwd": "${workspaceFolder}",  // to open terminal in current directory
    
    // EXCLUDES FILES FROM THE EXPLORER VIEW ENTIRELY
    // "files.exclude": {
    //     "**/_archive": true
    // },
    
    // EXCLUDES THESE FILES FROM THE EXPLORER SEARCH
    "search.exclude": {
        "**/_archive": true,
        "**/limbo": true
    },

    // EXCLUDES THESE FILES from IntelliSense (autocomplete)
    "python.analysis.exclude": [
        "**/_archive/**/*.py",
        "**/web/_archive-web/**/*.py",
        "**/dependencies/code file copies/**/*.py"
    ],
    "editor.folding": true,
    "editor.foldingStrategy": "auto",
    "markdown.experimental.editor.foldHeadings": true,
    "editor.tabCompletion": "on",
    "markdown.preview.breaks": true,
    "editor.fontSize": 14,
    "editor.tabSize": 2,
    "terminal.integrated.defaultProfile.osx": "bash",
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "files.autoSave": "onFocusChange",
    "git.autofetch": true,
    "diffEditor.experimental.showEmptyDecorations": false,
    "editor.guides.indentation": false,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "git.confirmSync": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "workbench.editor.enablePreview": false,
    "workbench.colorCustomizations": {
        "editor.background": "#151515",
        "workbench.background": "#151515",
        "sideBar.background": "#1a1a1a",
        "activityBar.background": "#1a1a1a",
        "editor.findMatchHighlightBackground": "#e5ff00",  // fine that it's giving lint error
        "diffEditor.insertedTextBackground": "#0e0174bc",
        "diffEditor.removedTextBackground": "#ff00c8b4"
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "entity.name.function.python"
                ],
                "settings": {
                    "foreground": "#33b8ff" // Changed to light blue for function names
                }
            },
            {
                "scope": [
                    "storage.type.function.python"
                ],
                "settings": {
                    "foreground": "#cf83e6" // Changed to red for 'def' and control keywords in Python
                }
            },
            {
                "scope": [
                    "constant.language.boolean.python",
                    "constant.language.python"
                ],
                "settings": {
                    "foreground": "#fb2100" // Red for Boolean values true, false, and None
                }
            },
            {
                "scope": [
                    "comment"
                ],
                "settings": {
                    "foreground": "#848484"
                }
            },
            {
                "scope": [
                    "string"
                ],
                "settings": {
                    "foreground": "#5fce7b"
                }
            },
            {
                "scope": [
                    "meta.paragraph.markdown",
                    "text.html.markdown"
                ],
                "settings": {
                    "foreground": "#cfcece" // Put your desired color code here
                    //"foreground": "#f8f6f6"
                }
            },
            {
                "scope": [
                    //"markup.heading",
                    //"markup.heading.2.markdown"
                    "heading.1.markdown",
                    //"entity.name.section.markdown"
                ],
                "settings": {
                    "foreground": "#41ff33" // Put your desired color code here
                }
            },
            {
                "scope": [
                    "heading.2.markdown"
                ],
                "settings": {
                    "foreground": "#33b8ff" // Put your desired color code here
                }
            },
            {
                "scope": [
                    "heading.3.markdown"
                ],
                "settings": {
                    "foreground": "#ff4e33" // Put your desired color code here
                }
            },
            {
                "scope": [
                    "heading.4.markdown"
                ],
                "settings": {
                    "foreground": "#f133ff" // Put your desired color code here
                }
            },
            {
                "scope": [
                    "heading.5.markdown"
                ],
                "settings": {
                    "foreground": "#ffa033" // Put your desired color code here
                }
            },
            {
                "scope": [
                    "heading.6.markdown"
                ],
                "settings": {
                    "foreground": "#b96bf1" // Put your desired color code here
                }
            },
            {
                "scope": [
                    "markup.bold"
                ],
                "settings": {
                    "foreground": "#ffee33" // Put your desired color code here
                }
            },
            {
                "scope": [
                    "markup.italic"
                ],
                "settings": {
                    "foreground": "#33fff5" // Put your desired color code here
                }
            },
            {
                "scope": [
                    "markup.quote.markdown"
                ],
                "settings": {
                    "foreground": "#379439" // Put your desired color code here
                }
            },
            {
                "scope": [
                    "meta.brackets"
                ],
                "settings": {
                    "foreground": "#f68183" // Put your desired color code here
                }
            }
        ]
    },
    "workbench.colorTheme": "Visual Studio Dark",
    "cSpell.enableFiletypes": [
        "!python"
    ],
    "diffEditor.maxComputationTime": 0,
    "diffEditor.experimental.showMoves": true,
    
    // moved to using a separate cspell.config file (4-24 RT) but it's not clear if the following line is needed. Please leave the commented cspell related lines in case we want to revert to it being here in settings.json
    //"cSpell.config": ".vscode/cspell.json",
    // "cSpell.dictionaryDefinitions": [
    //   { "name": "commonDictionary", "path": "./data/cspell_dictionary_common.txt" },
    //   { "name": "deutschDictionary", "path": "./data/deutsch/cspell_dictionary_deutsch.txt" },
    //   { "name": "pvDictionary", "path": "./data/pv/cspell_dictionary_pv2.txt" }
    // ],
    // "cSpell.dictionaries": ["commonDictionary", "deutschDictionary", "pvDictionary"],
    // "cSpell.words": [],
    // "cSpell.enableFiletypes": [
    //   "!python"
    // ],
    // "cSpell.ignorePaths": [
    //   "**/codeindex_*.md"
    // ],
    "python.testing.unittestEnabled": true,
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./tests",
        "-p",
        "test_*.py"
    ],
    "python.testing.pytestEnabled": false,
    "files.associations": {
        "*.csv": "excel",
        "*.vscdb": "sqlite"
    },
    "workbench.editorAssociations": {
        "*.csv": "gc-excelviewer-csv-editor"
    },
    "terminal.integrated.scrollback": 5000,
    "editor.guides.bracketPairs": true,
    "editor.defaultFormatter": "ms-python.python",
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.ignoreFiles": [
        ".vscode/**",
        "**/*.scss",
        "**/*.sass",
        "**/*.ts"
    ],
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    "cursor.chat.ghostTextAtSymbols": true,
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s3db": "${capture}.${extname}-*"
    },
    "editor.renderWhitespace": "none",

    "workbench.localHistory.enabled": true,
    "workbench.localHistory.maxFileSize": 1024, // KB
    "workbench.localHistory.maxFileEntries": 100

}

